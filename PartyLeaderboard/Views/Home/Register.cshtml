@{
    ViewBag.Title = "Register";
}

<script src='@Href("/Content/js/app/register.js")'></script>
Register to create and manage a Party Leaderboard.
<div ng-app>
    <div ng-controller="RegistrationCtrl">
        <div id="error" class="hidden">
            <p class="text-error">NOOOOOOOO! Something went wrong! <br/>
                {{errorMsg}}
            </p>
        </div>
        <form id="RegistrationForm" class="form-stacked fade-when-loading">
            <div class="clearfix">
                <input class="input-medium" name="userName" type="text" placeholder="UserName" ng-model="userName" />
            </div>
            <div class="clearfix">
                <input class="input-medium" name="email" type="text" placeholder="Email" ng-model="email" />
            </div>
            <div class="clearfix">
                <input class="input-medium" name="password" type="password" placeholder="Password" ng-model="password" />
            </div>
    
            <div class="actions">
                <button class="btn" type="submit" ng-click="register()">Sign up</button>
            </div>
        </form> 
    <p>&nbsp;</p>
        <div id="RegistrationSuccess" class="hidden">Create a leaderboard</div>
    </div>
</div>
